						level[i - 1][ j + 1] = 'x';
						i--;
					}else if(level[i][j + 1] != '0' && isCanInfect(i, j + 1)){//look to the right
						if(level[i][j + 1] == 'x'){leave = true;shapeFound = true;break;}
						level[i][j + 1] = 'x';
					}else if(level[i + 1][j + 1] != '0' && isCanInfect(i + 1, j + 1)){//look to the lower right corner
